alias oni2=/usr/bin/Onivim2-x86_64.AppImage
alias vol=ncpamixer
alias temp='watch -n 2 sensors'
alias wall='wal -i /usr/share/backgrounds'
alias cpu='watch -n 0 "lscpu | grep 'MHz'"'
alias wifi='nmcli device wifi connect TALKTALKCCACA7 password CQJFMXCF'

source ~/dotfiles/.zshrc

fpath=($fpath "/home/mthorning/.zfunctions")

# Set Spaceship ZSH as a prompt
autoload -U promptinit; promptinit
prompt spaceship

sshadd() {
    eval $(ssh-agent)
    ssh-add ~/.ssh/$1
}

photoup() {
    rsync -av --progress --delete ~/Documents/code/photography/photo-gallery vps:~/websites
    ssh vps docker restart photo
}

photodown() {
    mkdir ~/Pictures/$1
    sudo mount /dev/mmcblk0p1 /mnt
    cp /mnt/DCIM/**/*.NEF ~/Pictures/$1
    sudo umount /dev/mmcblk0p1
    echo "Remove SD card."
    backup&
}

export PATH="$PATH:/home/mthorning/.cargo/bin"
cat ~/.backup-status
